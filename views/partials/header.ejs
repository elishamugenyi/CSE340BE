<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (typeof jwt !== "undefined") { %>
      <!-- Show welcome message and account management link -->
      <a href="/account/account-management" title="Manage your account">Welcome <%= account_firstname || "User" %></a>
      <!-- Show logout link -->
      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <!-- Show login link when user is not logged in -->
      <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>

    <!--<a title="Click to log in" href="/account/login">My Account</a> -->
  </div>
</header>